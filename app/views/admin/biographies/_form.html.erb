<%= simple_form_for(@biography, as: "biography", url: admin_biography_path, html: {class: "form-horizontal"}) do |f| %>
<% @biography.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
<%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
<%= f.input :content, as: :kindeditor, label: '内容', input_html: {window_onload: true, filterMode: false} %>

<div class="control-group">
  <div class="controls">
    <%= f.button :submit, "保存" %>
  </div>
</div>
<% end %>