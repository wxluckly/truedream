<%= link_to '添加', new_admin_photo_path(category: params[:category]), class: 'pull-right btn btn-warning' %>
<% if @photos.present? %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>缩略图</th>
      <th>标题</th>
      <th>内容</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @photos.each do |photo| %>
    <tr>
      <td><%= image_tag(photo.cover_url(:thumb)) %></td>
      <td><%= photo.title %></td>
      <td><%= photo.content %></td>
      <td>
        <%= link_to '编辑', edit_admin_photo_path(photo, category: params[:category]) %>
        <%= link_to '删除', admin_photo_path(photo, category: params[:category]), method: :delete, data: { confirm: '确定删除吗?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @photos %>
<% else %>
<div>
  暂无内容
</div>
<% end %>
