<%= link_to '添加', new_admin_video_path(category: params[:category]), class: 'pull-right btn btn-warning' %>
<% if @videos.present? %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>商品标识码</th>
      <th>价格</th>
      <th>库存</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @videos.each do |video| %>
    <tr>
      <td><%= video.sku %></td>
      <td><%= video.price %></td>
      <td><%= video.stock %></td>
      <td>
        <%= link_to '编辑', edit_admin_video_path(video, category: params[:category]) %>
        <%= link_to '删除', admin_video_path(video, category: params[:category]), method: :delete, data: { confirm: '确定删除吗?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @videos %>
<% else %>
<div>
 暂无内容
</div>
<% end %>
